
  {% if section.settings.title != blank %}
    <div class="tip">
        <h2>{{ section.settings.title }}</h2>
    </div>
    {% endif %}
    <div class="page-width">
        <div class="grid">
        {% for block in section.blocks %}
        
            <div class="grid__items">
               <img src="{{ block.settings.image | img_url: 'large'  }}" />
                
                <div class="lft">
                    <div class="stars" style="">
                      <svg version="1.2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 121 28" width="121" height="28">
                      	<defs>
                      		<image  width="115" height="20" id="img1" href="data:image/png;base64,"/>
                      </defs>
                      	<style>
                      	</style>
                      	<use id="Vector Smart Object3 copy" href="#img1" x="3" y="4"/>
                      </svg>
                    </div>
                    <h3>
                      <a  href="{{ block.settings.link }}">
                        {{ block.settings.tab_name }} 
                        <svg version="1.2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 33 23" width="33" height="23">
                          	<defs>
                          		<image  width="27" height="19" id="img_arr" href="data:image/png;base64,"/>
                          	</defs>
                          	<style>
                          	</style>
                          	<use id="Vector Smart Object2" href="#img_arr" x="3" y="2"/>
                          </svg>
                        </a>
                    </h3>
                    <p>{{ block.settings.description | truncate: 150 }}</p>
                    <a  href="{{ block.settings.link }}" class="btn mob-btn-sm btn-sm btn-link bdr-btn1">
                        LEARN MORE
                    </a>
                </div>
            </div>
          {% endfor %}
  
        </div>
    </div>

<style>
  .top-seller-section{
    background:#fff;
    padding: 40px 0;
  }
  .top-seller-section .grid{
    display: flex;
    flex-wrap: wrap;
  }
  .top-seller-section .grid__items {
    width: 32%;
    padding: 10px;
}
    .top-seller-section .grid__items h3 svg{
        position: relative;
    top: 3px;
  }
   .top-seller-section .stars{
    margin-top: 25px;
  }
  .top-seller-section .grid__items img{
    width: 100%;
  }
</style>


{% schema %}
  {
    "name": "Top Seller",
    "class": "top-seller-section",
    "settings": [
      {
          "type": "textarea",
          "id": "title",
          "label": "Title Name",
		  "info":"Use <strong>text here</strong> to make tab bold"
        },
      {
        "type": "checkbox",
        "id": "section_cov",
        "label": "Add Background?",
        "default": false
      },
      {
			"type":"image_picker",
			"id":"star_image",
		     "label":"Add Image"			 
		},
      {
			"type":"image_picker",
			"id":"arrow_image",
		     "label":"Add Image"			 
		},
       {
        "type": "select",
        "id": "grid",
        "label": "Columns Per Row",
        "default": "3",
        "options": [        
          { "value": "2", "label": "2" },
          { "value": "3", "label": "3" },
          { "value": "4", "label": "4" }          
        ]
      }
    ],
    "blocks": [
      {
        "type": "collection_column",
        "name": "Collection",
        "settings": [
          {
			"type":"image_picker",
			"id":"image",
		     "label":"Add Image"			 
		},
 		{
          "type": "textarea",
          "id": "tab_name",
          "label": "Column Name",
		  "info":"Use <strong>text here</strong> to make tab bold"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Descriptions",
		  "info":"Use <strong>text here</strong> to make tab bold"
        },
          {
            "type": "url",
            "id": "link",
            "label": "Button Link"
          }
      	]
     }
	],
    "presets": [
      {
        "name": "Top Seller"
        
      }
    ]
  }
{% endschema %}

